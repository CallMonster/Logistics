<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_white">

    <TextView
        android:id="@+id/stateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="待取货"
        android:textColor="@color/text_grey"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="取货时间：2016年12月31日 12:00"
        android:textColor="@color/bottom_bg_color"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/sendTag"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/stateView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:src="@mipmap/logistic_sender" />

    <TextView
        android:id="@+id/sendAddrView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sendTag"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/sendTag"
        android:text="天津市南开区第五大街（胡同口刘大爷叫一声）"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/receiverTag"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/sendTag"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/logistic_receiver" />

    <TextView
        android:id="@+id/receiverAddrView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/receiverTag"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/receiverTag"
        android:text="北京市朝阳区八大胡同（胡同口张大爷叫一声）"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@mipmap/derection_icon" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:layout_below="@+id/receiverAddrView"
        android:layout_marginTop="15dp"
        android:alpha="0.3"
        android:background="@color/text_grey" />
</RelativeLayout>