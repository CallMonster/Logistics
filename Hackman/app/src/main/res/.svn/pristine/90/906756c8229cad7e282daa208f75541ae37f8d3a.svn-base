<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/drak_transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grey_low">
    <include layout="@layout/nav_layout"
        android:id="@+id/invent_friends_nav"/>
    <RelativeLayout android:id="@+id/searchBoxLayout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/grey_frame_round_conner_white"
        android:layout_marginTop="4dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/searchbox_search"
            android:layout_centerInParent="true"
            android:text="搜索好友"
            android:drawablePadding="@dimen/space_5"
            android:textColor="@color/home_grey"/>

    </RelativeLayout>

    <!-- 可能认识的人-->
    <RelativeLayout android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorWhite">
        <ImageView android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可能认识的人"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_toRightOf="@id/label1"
            android:textColor="@color/grey_normal"
            android:textSize="@dimen/font_12"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentRight="true"
            android:src="@mipmap/derection_icon"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <!-- 手机联系人-->
    <RelativeLayout android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorWhite">
        <ImageView android:id="@+id/label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/list_mobile"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机联系人"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_toRightOf="@id/label2"
            android:textColor="@color/grey_normal"
            android:textSize="@dimen/font_12"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentRight="true"
            android:src="@mipmap/derection_icon"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <!-- 扫一扫联系人-->
    <RelativeLayout android:layout_marginTop="@dimen/space_8"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/view_selector">
        <ImageView android:id="@+id/label3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/list_qrcode"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫一扫添加联系人"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_toRightOf="@id/label3"
            android:textColor="@color/grey_normal"
            android:textSize="@dimen/font_12"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentRight="true"
            android:src="@mipmap/derection_icon"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>