<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:gravity="center_horizontal"
    android:background="@mipmap/home_bg"
    >
    <RelativeLayout android:layout_marginTop="89dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@mipmap/home_icon_bg"
        android:id="@+id/home_icon_layout"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="51dp"
            android:layout_centerInParent="true"
            android:layout_height="51dp"
            android:background="@mipmap/logo"
            />
    </RelativeLayout>

    <TextView android:layout_below="@id/home_icon_layout"
        android:layout_width="204dp"
        android:layout_height="64dp"
        android:textColor="@color/colorWhite"
        android:text="@string/home_title"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/font_16"
        android:layout_marginTop="24dp"
        android:id="@+id/title"/>

    <TextView android:id="@+id/home_login_btn"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title"
        android:gravity="center"
        android:text="@string/login"
        android:textSize="@dimen/font_14"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="93dp"/>
    <View android:id="@+id/line1"
        android:layout_below="@id/home_login_btn"
        android:layout_width="295dp"
        android:layout_height="1dp"
        android:background="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

    <TextView android:layout_below="@id/line1"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:text="@string/register"
        android:textSize="@dimen/font_14"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/home_register_btn"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_15">
        <TextView android:id="@+id/home_bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_bottom"
            android:textSize="@dimen/font_14"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true"
            android:layout_marginTop="58dp"/>
        <TextView android:id="@+id/go_main_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="随便查看"
            android:textSize="@dimen/font_14"
            android:textColor="@color/colorWhite"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
    </RelativeLayout>

</RelativeLayout>