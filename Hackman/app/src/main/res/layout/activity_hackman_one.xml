<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/drak_transparent">

    <include layout="@layout/nav_layout"
        android:id="@+id/hackman_one_layout"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@mipmap/main_bg"
        android:paddingBottom="@dimen/space_80">

        <RelativeLayout android:layout_marginLeft="@dimen/space_30"
            android:layout_marginTop="@dimen/space_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView style="@style/main_text"
                android:text="真实姓名"
                android:id="@+id/label35"/>
            <TextView android:text=" (必填)"
                android:layout_toRightOf="@id/label35"
                android:layout_width="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <EditText android:hint="请输入您的真实姓名"
            style="@style/main_edit"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"
            android:layout_marginTop="@dimen/space_10"
            android:id="@+id/oneUserName"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/home_grey"
            android:layout_marginTop="@dimen/space_3"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"/>
        <RelativeLayout android:layout_marginLeft="@dimen/space_30"
            android:layout_marginTop="@dimen/space_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView style="@style/main_text"
                android:text="身份证号码"
                android:id="@+id/label36"/>
            <TextView android:text=" (必填)"
                android:layout_toRightOf="@id/label36"
                android:layout_width="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <EditText android:hint="请输入15位或18位数字"
            style="@style/main_edit"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"
            android:layout_marginTop="@dimen/space_10"
            android:id="@+id/oneIdenNumber"
            android:inputType="number"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/home_grey"
            android:layout_marginTop="@dimen/space_3"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"/>

        <RelativeLayout android:layout_marginTop="@dimen/space_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView style="@style/main_text"
                android:text="上传身份证正反面照片"
                android:layout_marginLeft="@dimen/space_30"
                android:id="@+id/label37"/>
            <TextView android:layout_toRightOf="@id/label37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (必填)"
                android:textColor="@color/colorAccent"/>
            <TextView android:id="@+id/text_four_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/tan"
                android:text="范例"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/space_30"
                android:textColor="@color/tab_seleted"
                android:drawablePadding="@dimen/space_8"
                android:visibility="gone"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_120"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"
            android:orientation="horizontal">
            <RelativeLayout android:id="@+id/oneFrontBtn"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="@dimen/space_10"
                android:background="@color/photo_bg"
                >

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/oneReserveBtn"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="@dimen/space_10"
                android:background="@color/photo_bg">

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout android:layout_marginTop="@dimen/space_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView style="@style/main_text"
                android:text="上传驾驶证照片"
                android:layout_marginLeft="@dimen/space_30"
                android:id="@+id/label38"/>
            <TextView android:layout_toRightOf="@id/label38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (必填)"
                android:textColor="@color/colorAccent"/>
            <TextView android:id="@+id/text_five_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/tan"
                android:text="范例"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/space_30"
                android:textColor="@color/tab_seleted"
                android:drawablePadding="@dimen/space_8"
                android:visibility="gone"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_120"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"
            android:orientation="horizontal">
            <RelativeLayout android:id="@+id/driving_licence_photo_btn"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="@dimen/space_10"
                android:background="@color/photo_bg"
                >

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/driving_licence_photo_btn_2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="@dimen/space_10"
                android:background="@color/photo_bg">

            </RelativeLayout>
        </LinearLayout>


        <TextView style="@style/main_text"
            android:text="企业编号(可选)"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginTop="@dimen/space_15"/>
        <EditText android:hint="你所在企业的营业编号"
            style="@style/main_edit"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"
            android:layout_marginTop="@dimen/space_10"
            android:id="@+id/oneEnNumberText"
            android:inputType="number"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/home_grey"
            android:layout_marginTop="@dimen/space_3"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"/>
        <RelativeLayout android:layout_marginTop="@dimen/space_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView style="@style/main_text"
                android:text="上传营业资格证(可选)"
                android:layout_marginLeft="@dimen/space_30"
                />
            <TextView android:id="@+id/text_six_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/tan"
                android:text="范例"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/space_30"
                android:textColor="@color/tab_seleted"
                android:drawablePadding="@dimen/space_8"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout android:id="@+id/business_certificate_photo_btn"
            android:layout_width="120dp"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/space_10"
            android:background="@color/photo_bg"
            >

        </RelativeLayout>
    </LinearLayout>

    </ScrollView>
</LinearLayout>